@echo off
chcp 65001 >nul
echo ════════════════════════════════════════════════════════
echo   КОМПИЛЯЦИЯ ПРОЕКТА "База данных студентов"
echo ════════════════════════════════════════════════════════
echo.

echo Компиляция main.c и func.c...
gcc main.c func.c -o students.exe

if %errorlevel% equ 0 (
    echo.
    echo ════════════════════════════════════════════════════════
    echo ✔ Компиляция успешно завершена!
    echo   Создан файл: students.exe
    echo ════════════════════════════════════════════════════════
    echo.
    echo Для запуска программы используйте: students.exe
    echo или просто запустите: run.bat
    echo.
) else (
    echo.
    echo ════════════════════════════════════════════════════════
    echo ✖ ОШИБКА: Компиляция не удалась!
    echo ════════════════════════════════════════════════════════
    echo.
    echo Убедитесь что:
    echo   - Установлен компилятор GCC (MinGW)
    echo   - GCC добавлен в переменную PATH
    echo   - Все файлы проекта находятся в текущей директории
    echo.
)

pause
